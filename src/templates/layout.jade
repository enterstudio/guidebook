doctype html
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    block title
      title
        if page.title
          | #{ page.title + " - " + locals.sitetitle }
        else
          = locals.sitetitle

    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='/styles/styles.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')

  body
    <!--[if lte IE 9]>
    <p class='browsehappy'>You are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    header.top-bar-container.contain-to-grid
      nav.top-bar(data-topbar)
        ul.title-area
          li.name
            h1: a(href='/') Streetmix <span class='title-guide'>Guidebook</span>
          li.toggle-topbar.menu-icon
            a(href='#')
              span Menu
        section.top-bar-section
          ul.right.hide-for-small
            li: a(href='/engagement')
              span Engagement
            li: a(href='/case-studies')
              span Case studies
            //li: a(href='/segments')
            //  span Segments
            li: a(href='/faq')
              span FAQ
          ul.show-for-small
            li: a(href='/engagement') Engaging your community
            li: a(href='/case-studies') Case studies
            // li: a(href='/segments') Street segments
            // li: a(href='/styleguide') Illustration & style guide
            li: a(href='/faq') Frequently asked questions
            li: a(href='/contribute') Contribute!

    block main
      .main(role='main')
        .row
          .columns.small-12.medium-offset-2.medium-8.large-offset-0.large-9.end
            if page.metadata.heading
              h2= page.metadata.heading
            else
              h2= page.title
        .row
          .columns.small-12.medium-offset-2.medium-8.large-offset-0.large-9.end.content
            block content
              != page.html

    footer
      .row
        .columns.small-12
          ul.inline-list.footer-links
            li: a(href='/about') About Streetmix
            li: a(href='http://blog.streetmix.net/') Blog
            li: a(href='/press') Press
            li: a(href='/contribute') Contribute
            li: a(href='mailto:streetmix@codeforamerica.org') Contact us

    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='/js/main.js')

    // Put Google Analytics here later

    block script
